# MOD KEY
set $mod Mod4

# FONT
font pango: Ubuntu Regular, FontAwesome 9

# MOUSE CONTROL
floating_modifier $mod

# TERMINALS
bindsym $mod+Return exec --no-startup-id st
#bindsym $mod+a exec --no-startup-id cool-retro-term -pl Neo
bindsym $mod+a exec --no-startup-id alacritty

# LAUNCHERS
