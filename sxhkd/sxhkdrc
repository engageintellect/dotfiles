#===[ UTILITIES ]===#

# TERMINAL 
super + Return
    st
	#st -e zsh -c tmux
super + a
    alacritty

# SCRATCHPAD
Menu
    ~/bin/env/scratchy.sh

# LAUNCHER
super + d
    rofi -show run -p "RUN" -font "Hack Nerd Font 10" -location 1 -width 15 -lines 100
    # ~/bin/env/pywal/dmenu_pywal.sh

# NETWORK
super + shift + n
    st -n iwctl -e iwctl
    #~/bin/env/networkmanager_dmenu_pywal.sh
    #networkmanager_dmenu  -fn 'mononoki Nerd Font-10' -nb '#000000' -sf '#000000' -sb '#ffffff' -nf '#ffffff'


# EDIT CONFIGS
super + shift + e
    ~/bin/env/scripts/edit_configs.sh

# COMPILE SUCKLESS
super + shift + c
    ~/bin/env/scripts/compile_suckless.sh


# CLIPMENU
super + x
    ~/bin/env/pywal/clipmenu_pywal.sh

# BATT
super + b
    ~/bin/env/batt.sh

# TOGGLE POLYBAR
super + p
    polybar-msg cmd {hide && bspc config top_padding 0, show && bspc config top_padding 25 && bspc config top_padding 25} 

# RELOAD POLYBAR
super + shift + p
    killall polybar && polybar -r new && bspc config top_padding 25


